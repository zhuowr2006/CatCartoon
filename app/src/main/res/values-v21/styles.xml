<resources>>

    <style name="ImageTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <!-- 标题栏样式 -->
    <style name="common_head">
        <item name="android:layout_marginTop">@dimen/top_bar_marginTop</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- tablayout字体大小-->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/content_text</item>
    </style>
</resources>
